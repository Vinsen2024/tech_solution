/* pages/teacher/home/index.wxss */
.page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 180rpx;
}

.content {
  padding: 30rpx;
}

/* 讲师卡片 */
.teacher-card {
  padding: 40rpx;
}

.teacher-header {
  display: flex;
  align-items: center;
}

.teacher-avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}

.teacher-info {
  flex: 1;
}

.teacher-name {
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.teacher-title {
  font-size: 28rpx;
  color: #666;
}

.teacher-bio {
  margin-top: 30rpx;
  padding-top: 30rpx;
  border-top: 1rpx solid #eee;
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
}

/* 联系人卡片 */
.contact-card {
  margin-top: 20rpx;
}

.contact-info {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}

.contact-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 24rpx;
}

.contact-detail {
  flex: 1;
}

.contact-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  display: block;
  margin-bottom: 16rpx;
}

.contact-actions {
  display: flex;
  gap: 20rpx;
}

.contact-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 24rpx;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  font-size: 24rpx;
  color: #666;
  border: none;
}

.contact-btn::after {
  border: none;
}

/* 能力模块 */
.modules-section {
  margin-top: 20rpx;
}

.modules-list {
  margin-top: 20rpx;
}

.module-item {
  margin-bottom: 20rpx;
}

.module-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 12rpx;
}

.module-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  display: block;
}

.module-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-top: 16rpx;
}

.module-tag {
  padding: 8rpx 20rpx;
  background-color: #f0f0ff;
  color: #667eea;
  font-size: 24rpx;
  border-radius: 20rpx;
}

/* CTA 按钮 */
.cta-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 30rpx;
  background-color: #fff;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.cta-btn {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 34rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  color: #999;
  font-size: 28rpx;
}

/* 错误状态 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  padding: 40rpx;
}

.error-icon {
  font-size: 100rpx;
  margin-bottom: 30rpx;
}

.error-text {
  color: #666;
  font-size: 30rpx;
  text-align: center;
  margin-bottom: 40rpx;
}

.retry-btn {
  padding: 20rpx 60rpx;
  background-color: #667eea;
  color: #fff;
  font-size: 30rpx;
  border-radius: 40rpx;
  border: none;
}

.retry-btn::after {
  border: none;
}
