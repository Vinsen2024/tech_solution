/* pages/lead/result/index.wxss */
.page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 30rpx;
}

/* 加载状态 */
.loading-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 100rpx;
}

.loading-animation {
  display: flex;
  gap: 16rpx;
  margin-bottom: 40rpx;
}

.loading-circle {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  animation: bounce 1.4s infinite ease-in-out both;
}

.loading-circle:nth-child(1) {
  animation-delay: -0.32s;
}

.loading-circle:nth-child(2) {
  animation-delay: -0.16s;
}

@keyframes bounce {
  0%, 80%, 100% {
    transform: scale(0);
  }
  40% {
    transform: scale(1);
  }
}

.loading-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.loading-subtitle {
  font-size: 28rpx;
  color: #999;
}

.preview-card {
  margin-top: 60rpx;
  width: 100%;
}

.preview-label {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.preview-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
}

/* 成功提示 */
.success-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
}

.success-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.success-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
}

/* 摘要切换 */
.summary-tabs {
  display: flex;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 8rpx;
  margin-bottom: 20rpx;
}

.summary-tabs .tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666;
  border-radius: 12rpx;
  transition: all 0.2s ease;
}

.summary-tabs .tab-item.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-weight: 500;
}

/* 摘要内容 */
.summary-card {
  margin-bottom: 20rpx;
}

.summary-content {
  font-size: 30rpx;
  color: #333;
  line-height: 1.8;
}

/* 覆盖率 */
.coverage-card {
  margin-bottom: 20rpx;
}

.coverage-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.coverage-title {
  font-size: 28rpx;
  color: #666;
}

.coverage-score {
  font-size: 32rpx;
  font-weight: 600;
  color: #667eea;
}

.coverage-bar {
  height: 16rpx;
  background-color: #eee;
  border-radius: 8rpx;
  overflow: hidden;
}

.coverage-fill {
  height: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 8rpx;
  transition: width 0.5s ease;
}

.coverage-tip {
  display: block;
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #f5a623;
  background-color: #fff8e6;
  padding: 16rpx;
  border-radius: 8rpx;
}

/* 澄清问题 */
.questions-card {
  margin-bottom: 20rpx;
}

.questions-list {
  margin-top: 20rpx;
}

.question-item {
  display: flex;
  align-items: flex-start;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.question-item:last-child {
  border-bottom: none;
}

.question-number {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background-color: #f0f0ff;
  color: #667eea;
  font-size: 24rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.question-text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

/* 操作按钮 */
.action-buttons {
  margin-top: 40rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.action-btn {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 32rpx;
  border-radius: 50rpx;
  border: none;
}

.export-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

.home-btn {
  background-color: #fff;
  color: #666;
  border: 2rpx solid #eee;
}
